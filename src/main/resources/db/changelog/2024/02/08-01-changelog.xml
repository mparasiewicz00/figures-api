        <modifyDataType tableName="figure" columnName="version" newDataType="INTEGER"/>
    </changeSet>

    <changeSet id="1707403054538-5" author="mateuszparasiewicz">
        <modifyDataType tableName="figure" columnName="version" newDataType="INT"/>
